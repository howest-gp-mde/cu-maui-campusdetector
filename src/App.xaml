<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Mde.CampusDetector.Converters"
             xmlns:local="clr-namespace:Mde.CampusDetector"
             x:Class="Mde.CampusDetector.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
                <ResourceDictionary>
                    <converters:DistanceToStringConverter x:Key="KilometerToString" />
                    <converters:DistanceToUnitConverter x:Key="DistanceToUnit" />
                </ResourceDictionary>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    